<%- include ('partials/header'); %>
<a href="/"><button class="btn btn-dark">Back</button></a>
<div class="row">
        <div class="col-12">  
        <br>
        <div class="card">
                    <div class="card-header"><h3><%= question.title %></h3></div>
                    <div class="card-body"><p><%= question.description %></p></div>
        </div>
        </div>  
        

        <div class="col-12">
            <div class="justify-content-center">
                <% answers.forEach( answer => { %>
                    <br>
                    <div class="card">
                    <p><b><%= answer.name %>:</b>
                    <%= answer.answerBody %></p>
                   </div> 

                <% }); %>
        </div>
        </div>

        <div class="col-12">
                <br>
                <h2>Answer Here</h2>
                <h2> â†“ </h2>
                <form method="POST" action="/saveanswer">
                    <div class="card">
                        <div class="card-body">
                            <label>Name:</label>
                            <input type="text" class="form-control" name="name" placeholder="Your name..."><br>
                            <label>Answer:</label>
                            <textarea class="form-control" name="answerBody"
                                placeholder="Describe here..."></textarea><br>
                            <input type="hidden" value="<%= question.id %>" name="questionId">
                            <button type="submit" class="btn btn-dark"> Submit!</button>
                           
                        </div>
                    </div>
                </form>   
        </div>  
        </div>

<%- include ('partials/typewriterAnimation'); %>
<%- include ('partials/footer'); %>